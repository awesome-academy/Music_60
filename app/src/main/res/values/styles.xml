<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name ="android:windowBackground"> @drawable/splash_screen_background</item>
    </style>
    
    <!--Style for purple line-->
    <style name="PurpleLineTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_tint_purple</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
    </style>

    <!--Style for recycler view on home-->
    <style name="HomeRecyclerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Style for play button in play music screen-->
    <style name="PlayButtonTheme">
        <item name="android:layout_width">@dimen/dp_55</item>
        <item name="android:layout_height">@dimen/dp_55</item>
        <item name="android:layout_margin">@dimen/dp_8</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
